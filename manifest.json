{
  "manifest_version": 3,
  "name": "Elara AI Agent",
  "version": "1.0.0",
  "description": "Ask Elara - Your AI-powered cybersecurity guardian. Real-time phishing detection, deepfake analysis, and fact-checking.",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Ask Elara"
  },

  "side_panel": {
    "default_path": "sidepanel/index.html"
  },

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"],
      "run_at": "document_idle"
    }
  ],

  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "contextMenus",
    "alarms",
    "scripting"
  ],

  "host_permissions": [
    "https://dev-api.thiefdroppers.com/*",
    "https://api.thiefdroppers.com/*"
  ],

  "web_accessible_resources": [
    {
      "resources": ["models/*"],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none';"
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Open Elara AI Agent"
    }
  }
}
