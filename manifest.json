{
  "manifest_version": 3,
  "name": "Elara AI Security Agent",
  "version": "3.0.0",
  "description": "AI-Powered Cybersecurity Guardian - Real-time phishing detection, threat analysis, and intelligent security assistance powered by Neural AI.",

  "author": "ThiefDroppers Security",
  "homepage_url": "https://thiefdroppers.com",

  "minimum_chrome_version": "116",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Elara AI Security"
  },

  "side_panel": {
    "default_path": "sidepanel/index.html"
  },

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],

  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "sidePanel",
    "contextMenus",
    "webNavigation",
    "alarms",
    "scripting",
    "offscreen",
    "identity",
    "cookies"
  ],

  "host_permissions": [
    "<all_urls>",
    "https://dev-api.thiefdroppers.com/*",
    "https://api.thiefdroppers.com/*",
    "https://e-brain-dashboard-122460113662.us-west1.run.app/*",
    "https://neural-service-api-p5ijr7bleq-uw.a.run.app/*",
    "https://huggingface.co/*",
    "https://cdn-lfs.huggingface.co/*",
    "https://cdn-lfs-us-1.huggingface.co/*",
    "https://raw.githubusercontent.com/*"
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "models/*.onnx",
        "models/*.wasm",
        "models/*.json",
        "models/*.bin",
        "models/*.txt",
        "lib/*.wasm",
        "lib/*.mjs",
        "*.wasm",
        "*.mjs",
        "assets/images/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "style-src-elem 'self' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; script-src 'self' 'wasm-unsafe-eval'; default-src 'self' data:; connect-src 'self' data: https://huggingface.co https://cdn-lfs.huggingface.co https://cdn-lfs-us-1.huggingface.co https://raw.githubusercontent.com https://cdn-lfs-us-1.hf.co https://e-brain-dashboard-122460113662.us-west1.run.app https://neural-service-api-p5ijr7bleq-uw.a.run.app https://api.thiefdroppers.com https://dev-api.thiefdroppers.com; object-src 'self';"
  },

  "externally_connectable": {
    "matches": [
      "https://thiefdroppers.com/*",
      "https://dev.thiefdroppers.com/*",
      "http://136.117.33.149/*"
    ]
  },

  "options_page": "popup/options.html",

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Open Elara AI Security"
    },
    "scan-current-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Scan current page for threats"
    }
  },

  "offline_enabled": true,

  "oauth2": {
    "client_id": "122460113662-e8fds1n2suqs53apv6sk49ru07dcco92.apps.googleusercontent.com",
    "scopes": [
      "openid",
      "email",
      "profile"
    ]
  },

  "key": ""
}
